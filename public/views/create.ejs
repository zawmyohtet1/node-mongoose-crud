<% include /includes/header.html %>
<form class="form-horizontal" role="form" method="post" action="/insert" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label col-md-3" for="name">Display Name</label>
        <div class="col-md-4">
            <input type="text" name="name" id="name" class="form-control" required>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3" for="user_name">User Name</label>
        <div class="col-md-4">
            <input type="text" name="user_name" id="user_name" class="form-control" required>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3" for="password">Password</label>
        <div class="col-md-4">
            <input type="password" name="password" id="password" class="form-control" required>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3">Admin</label>
        <div class="col-md-4">
            <div class="radio">
                <label>
                    <input type="radio" name="admin" value="Y" checked>
                    Yes
                </label>
                <label>
                    <input type="radio" name="admin" value="N">
                    No
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3">Image</label>
        <div class="col-md-4">
            <input type="file" name="image" onchange="previewImage( this )" />
            <img id="img_container" style="width: 200px;height: 200px" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <a href="/" class="btn btn-default">Back</a>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
<% include /includes/footer.html %>
<script>
    function readImage(file) {
        var reader = new FileReader();
        var image  = new Image();
        reader.readAsDataURL(file);
        reader.onload = function(_file) {
            image.src    = _file.target.result;
            image.onload = function() {
                document.getElementById( 'img_container' ).src = this.src;
            };
            image.onerror= function() {
                alert('Invalid file type: '+ file.type);
            };
        };

    }

    function previewImage( obj ){
        var F = obj.files;
        if(F && F[0]) for(var i=0; i<F.length; i++) readImage( F[i] );
    }

</script>